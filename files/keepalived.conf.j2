vrrp_instance VI_1 {
    state MASTER
    interface {{ interface }}
    virtual_router_id 51
    priority 100
    advert_int 1
    virtual_ipaddress {
        {{ vip }}
    }
    track_script {
        chk_haproxy
    }
}

vrrp_script chk_haproxy {
    script "/usr/bin/pgrep haproxy"
    interval 2
    weight 2
}
